 <PlusConfiguration version="2.1">
 <!-- In Device attributes, the second value after comma in the string, is the Stopacquisition parameter value -->
  <DataCollection StartupDelaySec="1.0" >
    <DeviceSet
      Name="PlusServer: Specim Camera"
      Description="Broadcasting acquired video through PlusServer from a Specim Camera"
    />
    <Device 
      Id="VideoDevice"
      Type="SpecimCam"
      Model="FX17e"	  
      ProfilesDirectory="../config">
      <DataSources>
        <DataSource Type="Video" Id="Video" PortUsImageOrientation="UF"/>
      </DataSources>
      <OutputChannels>
        <OutputChannel Id="VideoStream" VideoDataSourceId="Video" />
      </OutputChannels>
    </Device>
  </DataCollection>

  <CoordinateDefinitions>
    <Transform From="Image" To="Reference"
      Matrix="
        0.5 0 0 0
        0 -0.5 0 0
        0 0 0.5 0
        0 0 0 1" />
  </CoordinateDefinitions>

  <PlusOpenIGTLinkServer
    MaxNumberOfIgtlMessagesToSend="1"
    MaxTimeSpentWithProcessingMs="33"
    ListeningPort="18944"
    SendValidTransformsOnly="true"
    OutputChannelId="VideoStream" >
    <DefaultClientInfo>
      <MessageTypes>
        <Message Type="IMAGE" />
      </MessageTypes>
      <ImageNames>
        <Image Name="Image" EmbeddedTransformToFrame="Reference" />
      </ImageNames>
    </DefaultClientInfo>
  </PlusOpenIGTLinkServer>

</PlusConfiguration>
