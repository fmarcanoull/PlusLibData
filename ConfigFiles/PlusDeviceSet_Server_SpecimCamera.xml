 <PlusConfiguration version="2.1">
 <!-- In Device attributes, the second value after comma in the string, is the Stopacquisition parameter value -->
  <DataCollection StartupDelaySec="1.0" >
    <DeviceSet
      Name="PlusServer: Specim Camera"
      Description="Broadcasting acquired video through PlusServer from a Specim Camera"
    />
    <Device 
      Id="VideoDevice"
      Type="SpecimCam"
      Model="FX17e"	  
      Grabber.Channel="70:f8:e7:b0:06:64"
      Camera.CalibrationPack="None,true"
      AcquisitionWindow.Left="0,true"
      AcquisitionWindow.Top="0,true"
      AcquisitionWindow.Width="640,true"
      AcquisitionWindow.Height="224,true"
      Acquisition.RingBuffer.Size="500"
      Camera.MROI.Enable="false,true"
	  Camera.MROI.Mode="Band"
      Camera.MROI.Clear="None,true"
      Camera.MROI.MultipointString="None,true"
      Camera.MROI.MultibandString="None,true"
	  Camera.Gain.Digital="1x"
      Camera.ExposureTime="100"
      Camera.ExposureTime.Auto="false"
      Camera.FrameRate="30,true"
      Camera.Trigger.Mode="Internal,true"
      Camera.Trigger.InternalExposure="true"
      Camera.Trigger.Interleave="true"
      Camera.Binning.Spectral="1,true"
      Camera.Binning.Spatial="1,true"
      Camera.Binning.Average="true"
      Camera.Image.Transformation="No transformation,true"
	  Camera.Image.AberrationCorrection.Enabled="true"
	  Camera.Image.AberrationCorrection.Keystone.FilePath="None"
	  Camera.Image.AberrationCorrection.Smile.FilePath="None"
	  Pleora.PixelFormat="Mono12Packed"
	  Pleora.TapConfiguration="Two"
      Pleora.Stream.PacketSize="1060"
      Grabber.UseDVAL="true"
	  Camera.Trigger.Source="Line0"
      Camera.Shutter.VoltagePump.TimeoutInHours="0">
      <DataSources>
        <DataSource Type="Video" Id="Video" PortUsImageOrientation="UF"/>
      </DataSources>
      <OutputChannels>
        <OutputChannel Id="VideoStream" VideoDataSourceId="Video" />
      </OutputChannels>
    </Device>
  </DataCollection>

  <CoordinateDefinitions>
    <Transform From="Image" To="Reference"
      Matrix="
        0.5 0 0 0
        0 -0.5 0 0
        0 0 0.5 0
        0 0 0 1" />
  </CoordinateDefinitions>

  <PlusOpenIGTLinkServer
    MaxNumberOfIgtlMessagesToSend="1"
    MaxTimeSpentWithProcessingMs="33"
    ListeningPort="18944"
    SendValidTransformsOnly="true"
    OutputChannelId="VideoStream" >
    <DefaultClientInfo>
      <MessageTypes>
        <Message Type="IMAGE" />
      </MessageTypes>
      <ImageNames>
        <Image Name="Image" EmbeddedTransformToFrame="Reference" />
      </ImageNames>
    </DefaultClientInfo>
  </PlusOpenIGTLinkServer>

</PlusConfiguration>
